
iunmap <Esc>
let g:pymode_rope = 1
set nospell

noremap <silent> <C-S>          :update<CR>
vnoremap <silent> <C-S>         <C-C>:update<CR>
inoremap <silent> <C-S>         <C-O>:update<CR>

if WINDOWS()
  vmap <C-C> "+y
  imap <C-V> <ESC>"+gpa
  colorscheme atom
  set guifont=Consolas:h12:cANSI
  imap <C-/> <ESC>gcc<CR>a
  nmap <C-/> gcc
elif LINUX()
  colorscheme ir_black
endif
